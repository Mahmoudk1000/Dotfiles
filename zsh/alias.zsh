# Basic stuff
alias su="sudo"
alias l="ls"
alias ll="ls -l"
alias la="ls -al"

# Package Manager
alias pac="sudo pacman "
alias update="yay -Syu --noconfirm"
alias install="yay -S "
alias uninstall="yay -Rdd"
alias lookfor="yay -Ss "

# Text Editor
alias v="nvim"
alias svv="sudo nvim"

# Git
alias g="git"
alias glg="git log"
alias gl="git clone "
alias gs="git status"
alias gaa="git add --all"
alias gcp="git cherry-pick "
alias gcm="git commit -m "
alias gpl="git pull"
alias gp="git push"

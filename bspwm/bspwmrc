#!/bin/sh

# polybar
polybar left &
polybar middle &
polybar right &

# feh background
~/.fehbg &

# key bindings
sxhkd &

# start libinput-gestures
libinput-gestures-setup start

# set keyboard layouts en, ara
setxkbmap -model pc104 -layout us,ara -variant ,, -option grp:alt_shift_toggle &

# start auth app
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# picom
picom -b

# power manager
xfce4-power-manager &

# start mpd (life without music ist life, ryt !)
mpd &

# start pusleaudio
pulseaudio

# start redshift
redshift -t 6500:4900 -l 3.2476811:101.74012689999999 &

# unclutter (hides mouse while typing)
unclutter -idle 2 &

# set root pointer
xsetroot -cursor_name left_ptr

# Set some bsp specific stuff
bspc monitor -d 一 二 三 四 五 六 七 八

# bspwm settings
bspc config border_width 0
bspc config window_gap 10
bspc config top_padding 50
bspc config right_padding 0
bspc config bottom_padding 0
bspc config left_padding 0

bspc config split_ratio 0.5
bspc config borderless_monocle false
bspc config gapless_monocle true
bspc config paddingless_monocle true

bspc config pointer_modifier mod1
bspc config click_to_focus true
bspc config focus_follows_pointer true
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

# some window rules
bspc rule -a feh state=floating follow=on

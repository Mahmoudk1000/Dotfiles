set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"

set font "SF Pro Rrounded 12"
# Light/Default mode settings:
#
#
set notification-error-bg       "#ac8a8c" # Red
set notification-error-fg       "#ffffff" # Foreground
set notification-warning-bg     "#c6a679" # Orange
set notification-warning-fg     "#1f1f1f" # Selection
set notification-bg             "#161821" # Background
set notification-fg             "#ffffff" # Foreground

set completion-bg               "#161821" # Background
set completion-fg               "#4c4c4c" # Comment
set completion-group-bg         "#161821" # Background
set completion-group-fg         "#4c4c4c" # Comment
set completion-highlight-bg     "#1f1f1f" # Selection
set completion-highlight-fg     "#ffffff" # Foreground

set index-bg                    "#161821" # Background
set index-fg                    "#ffffff" # Foreground
set index-active-bg             "#1f1f1f" # Current Line
set index-active-fg             "#ffffff" # Foreground

set inputbar-bg                 "#161821" # Background
set inputbar-fg                 "#ffffff" # Foreground
set statusbar-bg                "#161821" # Background
set statusbar-fg                "#ffffff" # Foreground

set highlight-color             "#8aac8b" # Orange
set highlight-active-color      "#aca98a" # Pink

set default-bg                  "#161821" # Background
set default-fg                  "#ffffff" # Foreground

set render-loading              true
set render-loading-fg           "#161821" # Background
set render-loading-bg           "#ffffff" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#161821" # Background
set recolor-darkcolor           "#ffffff" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true
map <C-Tab> toggle_statusbar
set guioptions ""
